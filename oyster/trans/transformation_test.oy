argument
  plasmid_id: sample, "The plasmid stock with which to transform"
  e_coli_strain_id: sample, "The electrocompetent stock to be transformed"
  plate_type: object, "The plate on which the transformed cells to be plated"
end

place transform
  protocol: "oyster/trans/transform.pl"
  argument
    plasmid_id: plasmid_id
    e_coli_strain_id: e_coli_strain_id
    plate_type: plate_type
  end
  group: "transformers"
  marked: true
  start: now()
  window: minutes(30)
end


place plate
  protocol: "oyster/trans/plate.pl"
  argument
    volume: 200
    plate_type: plate_type
  end
  group: "transformers"
  start: now()
  window: minutes(1)
end

wire (transform,"transformed_cells_id") => (plate,"e_coli_strain_id")


place tube_incubate
  protocol: "oyster/trans/incubate.pl"
  argument
    temp: 37
  end
  group: "transformers"
  start: now()
  window: minutes(1)
end

wire (transform,"transformed_cells_id") => (tube_incubate,"e_coli_strain_id")

place plate_after_tube_incubate
  protocol: "oyster/trans/plate.pl"
  argument
    volume: 200
    plate_type: plate_type
  end
  group: "transformers"
  start: minutes(45)
  window: minutes(1)
end

wire (tube_incubate,"e_coli_strain_id") => (plate_after_tube_incubate,"e_coli_strain_id")


place incubate
  protocol: "oyster/trans/incubate.pl"
  argument
    temp: 37
  end
  group: "transformers"
  start: now()
  window: minutes(1)
end

wire (plate,"plate_id") => (incubate,"e_coli_strain_id")
wire (plate_after_tube_incubate, "plate_id") =>  (incubate,"e_coli_strain_id")

place image
  protocol: "oyster/trans/count_colonies.pl"
  group: "transformers"
  start: hours(20)
  window: hours(1)
end

wire (plate,"plate_id") => (image,"e_coli_strain_id")

place reimage
  protocol: "oyster/trans/count_colonies.pl"
  group: "transformers"
  start: now()
  window: hours(1)
end

wire (plate,"plate_id") => (reimage,"e_coli_strain_id")

# forward transitions
transition [transform] => [plate]    when !error(0) && completed(0) && return_value(0,"tube_incubation_choice") == 0 end
transition [plate]     => [incubate] when !error(0) && completed(0) end
transition [incubate]  => [image]    when !error(0) && completed(0) end
transition [image]     => []         when !error(0) && completed(0) end
transition [reimage]   => []         when !error(0) && completed(0) end

transition [transform] => [tube_incubate] when !error(0) && completed(0) && return_value(0,"tube_incubation_choice") == 1 end
transition [tube_incubate] =>[plate_after_tube_incubate] when !error(0) && completed(0) end
transition [plate_after_tube_incubate]     => [incubate] when !error(0) && completed(0) end


# rework transitions
transition [transform] => [transform] when error(0) end
transition [plate]     => [plate]     when error(0) end
transition [incubate]  => [incubate]  when error(0) end
transition [image]     => [reimage]   when error(0) end
transition [reimage]   => [reimage]   when error(0) end
